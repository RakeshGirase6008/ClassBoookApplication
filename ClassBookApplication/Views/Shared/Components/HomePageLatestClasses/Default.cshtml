@model List<ClassListingModel>
<section class="sptb ">
    <div class="container">
        <div class="section-title center-block text-center">
            <h2>Latest Classes</h2>
            <span class="sectiontitle-design"><span class="icons"></span></span>
            <p>Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua</p>
        </div>
        <div id="myCarousel1" class="owl-carousel owl-carousel-icons2">
            @foreach (var item in Model)
            {
                <div class="item">
                    <div class="card mb-0">
                        <div class="power-ribbon power-ribbon-top-left text-warning"><span class="bg-warning"><i class="fa fa-bolt"></i></span></div>
                        <div class="item-card2-img">
                            <a href="page-details.html"></a>
                            <img src="@item.Image" alt="@item.Name" class="cover-image">
                            <div class="item-tag">
                            </div>
                            <div class="item-overly-trans">
                                <div class="rating-stars d-flex">
                                    <span class="text-white mr-1 pl-1">@item.Rating</span>
                                    <input type="number" readonly="readonly" class="rating-value star" name="rating-stars-value" value="5">
                                    <div class="rating-stars-container">
                                        <div class="rating-star sm is--active">
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="rating-star sm is--active">
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="rating-star sm is--active">
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="rating-star sm">
                                            <i class="fa fa-star"></i>
                                        </div>
                                        <div class="rating-star sm">
                                            <i class="fa fa-star"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="item-card2-icons">
                            <a href="page-details.html" class="item-card2-icons-l"> <i class="fa fa-share-alt"></i></a>
                            <a href="page-details.html" class="item-card2-icons-l"> <i class="fa fa-heart text-danger"></i></a>
                        </div>
                        <div class="card-body">
                            <div class="item-card2">
                                <div class="item-card2-desc">
                                    <div class="item-card2-text mb-3">
                                        <a href="page-details.html" class="text-dark"><h4 class="mb-2">@item.Name</h4></a>
                                    </div>
                                    <p class="">@item.Description</p>

                                </div>
                            </div>
                        </div>
                        <div class="card-footer">
                            <div class="item-card2-footer">
                                <a class="btn btn-primary text-white float-right"><span class="font-weight-bold"> Subscribe</span></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
